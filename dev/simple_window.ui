<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  
  <!-- Main Application Window -->
  <object class="GtkApplicationWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="title">Simple Test Window</property>
    <property name="default_width">800</property>
    <property name="default_height">600</property>
    
    <child type="titlebar">
      <!-- Header Bar -->
      <object class="GtkHeaderBar" id="header_bar">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="title">Simple Test Window</property>
        <property name="subtitle">Testing Wayland</property>
        <property name="show_close_button">True</property>
      </object>
    </child>
    
    <child>
      <!-- Outer Container: Vertical Box (to hold horizontal area + statusbar) -->
      <object class="GtkBox" id="outer_container">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">vertical</property>
        
        <child>
          <!-- Horizontal Container: Vertical toolbar + Dock area + Main content area -->
          <object class="GtkBox" id="horizontal_container">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">horizontal</property>
            <property name="vexpand">True</property>
            
            <child>
              <!-- Vertical Toolbar (only buttons) -->
              <object class="GtkBox" id="vertical_toolbar">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">5</property>
                <property name="width_request">54</property>
                <property name="vexpand">True</property>
                
                <!-- Placeholder label for toolbar -->
                <child>
                  <object class="GtkLabel" id="toolbar_label">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label">Toolbar</property>
                    <property name="halign">center</property>
                    <property name="margin">5</property>
                  </object>
                </child>
                
                <!-- Toggle Button -->
                <child>
                  <object class="GtkToggleButton" id="test_toggle_button">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="receives_default">True</property>
                    <property name="label">Files</property>
                    <property name="active">False</property>
                    <property name="margin_start">5</property>
                    <property name="margin_end">5</property>
                    <property name="margin_top">5</property>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            
            <child>
              <!-- Dock Area (where File Explorer docks next to toolbar) -->
              <object class="GtkBox" id="dock_area">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="vexpand">True</property>
                <property name="width_request">0</property>
                <!-- File Explorer will be docked here dynamically -->
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
            
            <child>
              <!-- Main Content Area -->
              <object class="GtkBox" id="content_area">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">10</property>
                <property name="margin">20</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                
                <!-- Placeholder label -->
                <child>
                  <object class="GtkLabel" id="info_label">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label">Main Content Area</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">2</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">True</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        
        <child>
          <!-- Status Bar at Bottom -->
          <object class="GtkStatusbar" id="status_bar">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="margin_start">5</property>
            <property name="margin_end">5</property>
            <property name="margin_top">2</property>
            <property name="margin_bottom">2</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
