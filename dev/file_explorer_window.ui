<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  
  <!-- File Explorer Window -->
  <object class="GtkWindow" id="file_explorer_window">
    <property name="can_focus">False</property>
    <property name="title">File Explorer</property>
    <property name="default_width">400</property>
    <property name="default_height">500</property>
    <property name="type_hint">utility</property>
    
    <child>
      <!-- Notebook Widget -->
      <object class="GtkNotebook" id="file_explorer_notebook">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="show_border">True</property>
        <property name="scrollable">True</property>
        
        <!-- Tab 1: Files -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="margin">15</property>
            
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Files Content</property>
                <property name="halign">center</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label">Files</property>
          </object>
          <packing>
            <property name="tab_fill">False</property>
          </packing>
        </child>
        
        <!-- Tab 2: Projects -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="margin">15</property>
            
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Projects Content</property>
                <property name="halign">center</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label">Projects</property>
          </object>
          <packing>
            <property name="tab_fill">False</property>
          </packing>
        </child>
        
        <!-- Tab 3: Recent -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="margin">15</property>
            
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Recent Content</property>
                <property name="halign">center</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label">Recent</property>
          </object>
          <packing>
            <property name="tab_fill">False</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
