<?xml version="1.0" encoding="UTF-8"?>
<!-- Transition Topology Tab UI - Clean XML Architecture -->
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <!-- Main container for topology tab -->
  <object class="GtkBox" id="transition_topology_tab_root">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="margin_start">12</property>
    <property name="margin_end">12</property>
    <property name="margin_top">12</property>
    <property name="margin_bottom">12</property>
    
    <!-- Scrolled window for topology information -->
    <child>
      <object class="GtkScrolledWindow" id="topology_scrolled_window">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="hscrollbar_policy">automatic</property>
        <property name="vscrollbar_policy">automatic</property>
        <property name="shadow_type">in</property>
        <property name="min_content_height">300</property>
        <property name="propagate_natural_height">True</property>
        
        <child>
          <object class="GtkViewport">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            
            <child>
              <object class="GtkBox" id="topology_content_box">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">16</property>
                <property name="margin_start">8</property>
                <property name="margin_end">8</property>
                <property name="margin_top">8</property>
                <property name="margin_bottom">8</property>
                
                <!-- Cycles Section -->
                <child>
                  <object class="GtkFrame" id="cycles_frame">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label_xalign">0</property>
                    <property name="shadow_type">none</property>
                    
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label" translatable="yes">&lt;b&gt;Cycles&lt;/b&gt;</property>
                        <property name="use_markup">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="margin_start">12</property>
                        <property name="margin_top">6</property>
                        
                        <child>
                          <object class="GtkLabel" id="topology_cycles_label">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="label" translatable="yes">Analyzing cycles...</property>
                            <property name="xalign">0</property>
                            <property name="yalign">0</property>
                            <property name="wrap">True</property>
                            <property name="selectable">True</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- T-Invariants Section (Transition-specific) -->
                <child>
                  <object class="GtkFrame" id="t_invariants_frame">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label_xalign">0</property>
                    <property name="shadow_type">none</property>
                    
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label" translatable="yes">&lt;b&gt;T-Invariants (Reproducible Sequences)&lt;/b&gt;</property>
                        <property name="use_markup">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="margin_start">12</property>
                        <property name="margin_top">6</property>
                        
                        <child>
                          <object class="GtkLabel" id="topology_t_invariants_label">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="label" translatable="yes">T-invariants not yet implemented</property>
                            <property name="xalign">0</property>
                            <property name="yalign">0</property>
                            <property name="wrap">True</property>
                            <property name="selectable">True</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Paths Section -->
                <child>
                  <object class="GtkFrame" id="paths_frame">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label_xalign">0</property>
                    <property name="shadow_type">none</property>
                    
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label" translatable="yes">&lt;b&gt;Paths&lt;/b&gt;</property>
                        <property name="use_markup">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="margin_start">12</property>
                        <property name="margin_top">6</property>
                        
                        <child>
                          <object class="GtkLabel" id="topology_paths_label">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="label" translatable="yes">Analyzing paths...</property>
                            <property name="xalign">0</property>
                            <property name="yalign">0</property>
                            <property name="wrap">True</property>
                            <property name="selectable">True</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Hub Status Section -->
                <child>
                  <object class="GtkFrame" id="hub_frame">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label_xalign">0</property>
                    <property name="shadow_type">none</property>
                    
                    <child type="label">
                      <object class="GtkLabel">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label" translatable="yes">&lt;b&gt;Hub Status&lt;/b&gt;</property>
                        <property name="use_markup">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="margin_start">12</property>
                        <property name="margin_top">6</property>
                        
                        <child>
                          <object class="GtkLabel" id="topology_hub_label">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="label" translatable="yes">Analyzing hub status...</property>
                            <property name="xalign">0</property>
                            <property name="yalign">0</property>
                            <property name="wrap">True</property>
                            <property name="selectable">True</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Action buttons -->
    <child>
      <object class="GtkBox" id="action_buttons_box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">6</property>
        <property name="halign">end</property>
        
        <child>
          <object class="GtkButton" id="highlight_button">
            <property name="label" translatable="yes">Highlight on Canvas</property>
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text" translatable="yes">Highlight topology on canvas</property>
          </object>
        </child>
        
        <child>
          <object class="GtkButton" id="export_button">
            <property name="label" translatable="yes">Export...</property>
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text" translatable="yes">Export topology analysis to file</property>
          </object>
        </child>
      </object>
    </child>
    
  </object>
</interface>
