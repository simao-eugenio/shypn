<?xml version="1.0" encoding="UTF-8"?>
<!-- Enhanced Transition Dialog with Notebook Interface -->
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <!-- Adjustments -->
  <object class="GtkAdjustment" id="delay_adjustment">
    <property name="upper">10000</property>
    <property name="value">1</property>
    <property name="step-increment">0.10</property>
    <property name="page-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="height_adjustment">
    <property name="lower">10</property>
    <property name="upper">200</property>
    <property name="value">20</property>
    <property name="step-increment">1</property>
    <property name="page-increment">5</property>
  </object>
  <object class="GtkAdjustment" id="width_adjustment">
    <property name="lower">10</property>
    <property name="upper">200</property>
    <property name="value">40</property>
    <property name="step-increment">1</property>
    <property name="page-increment">5</property>
  </object>
  <object class="GtkAdjustment" id="rate_adjustment">
    <property name="lower">0.001</property>
    <property name="upper">1000</property>
    <property name="value">1</property>
    <property name="step-increment">0.10</property>
    <property name="page-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="priority_adjustment">
    <property name="upper">100</property>
    <property name="step-increment">1</property>
    <property name="page-increment">5</property>
  </object>

  <!-- Main Dialog -->
  <object class="GtkDialog" id="transition_properties_dialog">
    <property name="can-focus">False</property>
    <property name="border-width">5</property>
    <property name="title" translatable="yes">Transition Properties</property>
    <property name="resizable">True</property>
    <property name="modal">True</property>
    <property name="window-position">center-on-parent</property>
    <property name="type-hint">dialog</property>
    <property name="default-width">500</property>
    <property name="default-height">450</property>
    
    <child internal-child="vbox">
      <object class="GtkBox" id="dialog_vbox">
        <property name="can-focus">False</property>
        <property name="orientation">vertical</property>
        <property name="spacing">2</property>
        
        <!-- Action Area -->
        <child internal-child="action_area">
          <object class="GtkButtonBox" id="dialog_action_area">
            <property name="can-focus">False</property>
            <property name="layout-style">end</property>
            <child>
              <object class="GtkButton" id="cancel_button">
                <property name="label" translatable="yes">Cancel</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="receives-default">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="ok_button">
                <property name="label" translatable="yes">OK</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="receives-default">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="pack-type">end</property>
            <property name="position">0</property>
          </packing>
        </child>
        
        <!-- Main Content -->
        <child>
          <object class="GtkNotebook" id="main_notebook">
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <property name="margin-left">10</property>
            <property name="margin-right">10</property>
            <property name="margin-top">10</property>
            <property name="margin-bottom">10</property>
            
            <!-- Basic Properties Tab -->
            <child>
              <object class="GtkBox" id="basic_tab_content">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">15</property>
                <property name="margin-top">15</property>
                <property name="margin-bottom">15</property>
                <property name="margin-left">15</property>
                <property name="margin-right">15</property>
                
                <!-- General Frame -->
                <child>
                  <object class="GtkFrame" id="general_frame">
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="label-xalign">0</property>
                    <property name="shadow-type">in</property>
                    <child>
                      <object class="GtkBox" id="general_box">
                        <property name="visible">True</property>
                        <property name="can-focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-top">10</property>
                        <property name="margin-bottom">10</property>
                        <property name="margin-left">15</property>
                        <property name="margin-right">15</property>
                        
                        <child>
                          <object class="GtkBox" id="name_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="name_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Name:</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkEntry" id="name_entry">
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="hexpand">True</property>
                                <property name="invisible-char">●</property>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">0</property>
                          </packing>
                        </child>
                        
                        <child>
                          <object class="GtkBox" id="label_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="label_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Label:</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkEntry" id="transition_label_entry">
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="hexpand">True</property>
                                <property name="invisible-char">●</property>
                                <property name="placeholder-text">Optional display label</property>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">1</property>
                          </packing>
                        </child>
                        
                        <child>
                          <object class="GtkBox" id="type_combo_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="type_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Type:</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkComboBoxText" id="prop_transition_type_combo">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="hexpand">True</property>
                                <property name="active">2</property>
                                <property name="tooltip-text">Select the timing behavior for this transition</property>
                                <items>
                                  <item translatable="yes">immediate</item>
                                  <item translatable="yes">timed</item>
                                  <item translatable="yes">stochastic</item>
                                  <item translatable="yes">continuous</item>
                                </items>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">1</property>
                          </packing>
                        </child>
                        
                        <!-- Source/Sink Markers -->
                        <child>
                          <object class="GtkBox" id="source_sink_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">20</property>
                            <property name="halign">start</property>
                            <child>
                              <object class="GtkCheckButton" id="is_source_check">
                                <property name="label" translatable="yes">Source (generates tokens)</property>
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="receives-default">False</property>
                                <property name="tooltip-text">Source transition generates tokens without consuming input (models external arrivals)</property>
                                <property name="draw-indicator">True</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkCheckButton" id="is_sink_check">
                                <property name="label" translatable="yes">Sink (consumes tokens)</property>
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="receives-default">False</property>
                                <property name="tooltip-text">Sink transition consumes tokens without producing output (models external departures)</property>
                                <property name="draw-indicator">True</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">2</property>
                          </packing>
                        </child>
                        
                      </object>
                    </child>
                    <child type="label">
                      <object class="GtkLabel" id="general_label">
                        <property name="visible">True</property>
                        <property name="can-focus">False</property>
                        <property name="label" translatable="yes">General Properties</property>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>
                
                <!-- Type Parameters Frame -->
                <child>
                  <object class="GtkFrame" id="type_parameters_frame">
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="label-xalign">0</property>
                    <property name="shadow-type">in</property>
                    <child>
                      <object class="GtkBox" id="type_parameters_box">
                        <property name="visible">True</property>
                        <property name="can-focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-top">10</property>
                        <property name="margin-bottom">10</property>
                        <property name="margin-left">15</property>
                        <property name="margin-right">15</property>
                        
                        <!-- Priority Field -->
                        <child>
                          <object class="GtkBox" id="priority_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="priority_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Priority:</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                                <property name="tooltip-text">Priority for conflict resolution (higher = higher priority)</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkSpinButton" id="priority_spin">
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="hexpand">True</property>
                                <property name="adjustment">priority_adjustment</property>
                                <property name="digits">0</property>
                                <property name="tooltip-text">Priority for conflict resolution when multiple transitions are enabled (0-100, default=0)</property>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">0</property>
                          </packing>
                        </child>
                        
                        <!-- Firing Policy Field -->
                        <child>
                          <object class="GtkBox" id="firing_policy_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="firing_policy_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Firing Policy:</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                                <property name="tooltip-text">Policy for conflict resolution timing</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkComboBoxText" id="firing_policy_combo">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="hexpand">True</property>
                                <property name="active">0</property>
                                <property name="tooltip-text">When multiple transitions are enabled: 'Earliest' fires the transition enabled first, 'Latest' fires the most recently enabled transition</property>
                                <items>
                                  <item translatable="yes">Earliest</item>
                                  <item translatable="yes">Latest</item>
                                </items>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">1</property>
                          </packing>
                        </child>
                        
                        <!-- Rate Field -->
                        <child>
                          <object class="GtkBox" id="rate_simple_box">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkLabel" id="rate_simple_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Rate (λ):</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                                <property name="tooltip-text">Rate parameter for stochastic/timed transitions</property>
                              </object>
                              <packing>
                                <property name="expand">False</property>
                                <property name="fill">True</property>
                                <property name="position">0</property>
                              </packing>
                            </child>
                            <child>
                              <object class="GtkEntry" id="rate_entry">
                                <property name="visible">True</property>
                                <property name="can-focus">True</property>
                                <property name="hexpand">True</property>
                                <property name="tooltip-text">Numeric rate value or expression (e.g., '1.0', '0.5 * tokens(P1)'). For complex functions, use the Behavior tab.</property>
                                <property name="placeholder-text">Enter rate value or expression</property>
                              </object>
                              <packing>
                                <property name="expand">True</property>
                                <property name="fill">True</property>
                                <property name="position">1</property>
                              </packing>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">1</property>
                          </packing>
                        </child>
                        
                        <!-- Help Text -->
                        <child>
                          <object class="GtkLabel" id="type_parameters_help">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="label">• Priority: Used for conflict resolution (PRIORITY policy)
• Rate: Basic numeric value or expression
• For complex rate functions, use the Behavior tab</property>
                            <property name="use-markup">True</property>
                            <property name="xalign">0</property>
                            <property name="wrap">True</property>
                            <property name="margin-top">5</property>
                            <attributes>
                              <attribute name="style" value="italic"/>
                              <attribute name="scale" value="0.8"/>
                            </attributes>
                          </object>
                          <packing>
                            <property name="expand">False</property>
                            <property name="fill">True</property>
                            <property name="position">2</property>
                          </packing>
                        </child>
                        
                      </object>
                    </child>
                    <child type="label">
                      <object class="GtkLabel" id="type_parameters_label">
                        <property name="visible">True</property>
                        <property name="can-focus">False</property>
                        <property name="label" translatable="yes">Type-Specific Parameters</property>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">1</property>
                  </packing>
                </child>
                
              </object>
            </child>
            <child type="tab">
              <object class="GtkLabel" id="basic_tab_label">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="label" translatable="yes">Basic</property>
              </object>
              <packing>
                <property name="tab-fill">False</property>
              </packing>
            </child>
            
            <!-- Behavior Tab -->
            <child>
              <object class="GtkBox" id="behavior_tab_content">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">15</property>
                <property name="margin-top">15</property>
                <property name="margin-bottom">15</property>
                <property name="margin-left">15</property>
                <property name="margin-right">15</property>
                
                <!-- Guard & Rate Functions Frame -->
                <child>
                  <object class="GtkFrame" id="guard_rate_frame">
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="label-xalign">0</property>
                    <property name="shadow-type">in</property>
                    <child>
                      <object class="GtkBox" id="guard_rate_box">
                        <property name="visible">True</property>
                        <property name="can-focus">False</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">15</property>
                        <property name="margin-top">15</property>
                        <property name="margin-bottom">15</property>
                        <property name="margin-left">15</property>
                        <property name="margin-right">15</property>
                        
                        <!-- Guard Function Section -->
                        <child>
                          <object class="GtkFrame" id="guard_section_frame">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="label-xalign">0</property>
                            <property name="shadow-type">none</property>
                            <child>
                              <object class="GtkBox" id="guard_section_box">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="orientation">vertical</property>
                                <property name="spacing">8</property>
                                <property name="margin-top">10</property>
                                <property name="margin-left">10</property>
                                <property name="margin-right">10</property>
                                
                                <child>
                                  <object class="GtkLabel" id="guard_description_label">
                                    <property name="visible">True</property>
                                    <property name="can-focus">False</property>
                                    <property name="label">Guard: Enable/disable flag for transition firing
• Numeric value, expression, or threshold function
• Examples: 'x &gt; 5', 'tokens(P1) &gt;= 2', '0.8'</property>
                                    <property name="use-markup">True</property>
                                    <property name="xalign">0</property>
                                    <property name="wrap">True</property>
                                    <attributes>
                                      <attribute name="style" value="italic"/>
                                      <attribute name="scale" value="0.8"/>
                                    </attributes>
                                  </object>
                                  <packing>
                                    <property name="expand">False</property>
                                    <property name="fill">True</property>
                                    <property name="position">0</property>
                                  </packing>
                                </child>
                                
                                <child>
                                  <object class="GtkScrolledWindow" id="guard_scrolled_window">
                                    <property name="visible">True</property>
                                    <property name="can-focus">True</property>
                                    <property name="shadow-type">in</property>
                                    <property name="min-content-height">80</property>
                                    <property name="max-content-height">150</property>
                                    <property name="hscrollbar-policy">automatic</property>
                                    <property name="vscrollbar-policy">automatic</property>
                                    <child>
                                      <object class="GtkTextView" id="guard_textview">
                                        <property name="visible">True</property>
                                        <property name="can-focus">True</property>
                                        <property name="wrap-mode">word</property>
                                        <property name="left-margin">5</property>
                                        <property name="right-margin">5</property>
                                        <property name="top-margin">5</property>
                                        <property name="bottom-margin">5</property>
                                      </object>
                                    </child>
                                  </object>
                                  <packing>
                                    <property name="expand">True</property>
                                    <property name="fill">True</property>
                                    <property name="position">1</property>
                                  </packing>
                                </child>
                                
                              </object>
                            </child>
                            <child type="label">
                              <object class="GtkLabel" id="guard_section_label">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
                                <property name="label" translatable="yes">Guard Function</property>
                              </object>
                            </child>
                          </object>
                          <packing>
                            <property name="expand">True</property>
                            <property name="fill">True</property>
                            <property name="position">0</property>
                          </packing>
                        </child>
                        
                        <!-- Rate Function Section -->
                        <child>
                          <object class="GtkFrame" id="rate_section_frame">
                            <property name="visible">True</property>
                            <property name="can-focus">False</property>
                            <property name="label-xalign">0</property>
                            <property name="shadow-type">none</property>
                            <child>
                              <object class="GtkBox" id="rate_section_box">
                                <property name="visible">True</property>
                                <property name="can-focus">False</property>
