<?xml version="1.0" encoding="UTF-8"?>
<!-- Simulate Palette - Floating [S] Button to Toggle Simulation Tools -->
<interface>
  <requires lib="gtk+" version="3.0"/>

  <!-- Main container for simulate palette -->
  <object class="GtkBox" id="simulate_palette_container">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>
    <property name="spacing">0</property>
    <property name="halign">center</property>
    <property name="valign">end</property>
    <property name="margin_bottom">12</property>

    <!-- Inner control box with [ ][S][ ] layout -->
    <child>
      <object class="GtkBox" id="simulate_control">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">8</property>
        <property name="halign">fill</property>
        <property name="valign">fill</property>
        <style>
          <class name="simulate-palette-control"/>
        </style>

        <!-- Left placeholder -->
        <child>
          <object class="GtkBox" id="left_placeholder">
            <property name="visible">True</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
          </object>
        </child>

        <!-- Simulate Button [S] - Toggles the simulation tools palette -->
        <child>
          <object class="GtkToggleButton" id="simulate_toggle_button">
            <property name="visible">True</property>
            <property name="label">S</property>
            <property name="tooltip-text">Toggle Simulation Tools (Run, Stop, Reset)</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
            <style>
              <class name="simulate-button"/>
            </style>
          </object>
        </child>

        <!-- Right placeholder -->
        <child>
          <object class="GtkBox" id="right_placeholder">
            <property name="visible">True</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
          </object>
        </child>

      </object>
    </child>

  </object>

</interface>
