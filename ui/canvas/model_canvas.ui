<?xml version="1.0" encoding="UTF-8"?>
<!-- GTK3 Model Canvas - Multi-document Petri Net drawing area -->
<interface>
  <requires lib="gtk+" version="3.0"/>

  <object class="GtkBox" id="model_canvas_container">
    <property name="orientation">vertical</property>
    <property name="hexpand">True</property>
    <property name="vexpand">True</property>
    <property name="visible">True</property>
    
    <!-- Notebook for multi-document tabs -->
    <child>
      <object class="GtkNotebook" id="canvas_notebook">
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>
        <property name="visible">True</property>
        <property name="scrollable">True</property>
        <property name="enable-popup">True</property>
        <property name="show-border">True</property>
        
        <!-- First page/document -->
        <child>
          <object class="GtkOverlay" id="canvas_overlay_1">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="visible">True</property>
            
            <!-- Main canvas content -->
            <child>
              <object class="GtkScrolledWindow" id="canvas_scroll_1">
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <property name="visible">True</property>
                <property name="hscrollbar-policy">automatic</property>
                <property name="vscrollbar-policy">automatic</property>
                
                <child>
                  <object class="GtkDrawingArea" id="canvas_drawing_1">
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                    <property name="visible">True</property>
                    <property name="width-request">800</property>
                    <property name="height-request">600</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Overlay container for zoom control (will be added programmatically) -->
            <child type="overlay">
              <object class="GtkBox" id="canvas_overlay_box_1">
                <property name="orientation">vertical</property>
                <property name="halign">end</property>
                <property name="valign">end</property>
                <property name="visible">True</property>
                <!-- Zoom control will be added here dynamically -->
              </object>
            </child>
            
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="label">Model 1</property>
            <property name="visible">True</property>
          </object>
        </child>
        
      </object>
    </child>
    
  </object>
</interface>
