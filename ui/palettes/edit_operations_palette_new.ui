<?xml version="1.0" encoding="UTF-8"?>
<!-- Edit Operations Palette - Select, Lasso, Undo, Redo Buttons -->
<interface>
  <requires lib="gtk+" version="3.0"/>

  <!-- Revealer for floating operations palette -->
  <object class="GtkRevealer" id="operations_revealer">
    <property name="visible">True</property>
    <property name="reveal-child">False</property>
    <property name="transition-type">slide-up</property>
    <property name="transition-duration">200</property>
    <property name="halign">center</property>
    <property name="valign">end</property>
    <property name="margin_bottom">78</property>
    <property name="margin_start">202</property>

    <child>
      <object class="GtkFrame" id="operations_frame">
        <property name="visible">True</property>
        <property name="shadow-type">out</property>
        <style>
          <class name="gray-palette-frame"/>
        </style>
        <child>
          <object class="GtkBox" id="operations_container">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="margin">6</property>

        <!-- Select Tool Button [S] -->
        <child>
          <object class="GtkToggleButton" id="btn_select">
            <property name="visible">True</property>
            <property name="label">S</property>
            <property name="tooltip-text">Select Mode (Ctrl+S)</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>

        <!-- Lasso Selection Button [L] -->
        <child>
          <object class="GtkButton" id="btn_lasso">
            <property name="visible">True</property>
            <property name="label">L</property>
            <property name="tooltip-text">Lasso Selection (Ctrl+L)</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>

        <!-- Undo Button [U] -->
        <child>
          <object class="GtkButton" id="btn_undo">
            <property name="visible">True</property>
            <property name="label">U</property>
            <property name="tooltip-text">Undo (Ctrl+Z)</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
            <property name="sensitive">False</property>
          </object>
        </child>

        <!-- Redo Button [R] -->
        <child>
          <object class="GtkButton" id="btn_redo">
            <property name="visible">True</property>
            <property name="label">R</property>
            <property name="tooltip-text">Redo (Ctrl+Shift+Z)</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
            <property name="sensitive">False</property>
          </object>
        </child>

          </object>
        </child>
      </object>
    </child>