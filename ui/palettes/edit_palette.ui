<?xml version="1.0" encoding="UTF-8"?>
<!-- Edit Palette - Zoom-Style Container with [E] Button -->
<interface>
  <requires lib="gtk+" version="3.0"/>

  <!-- Main container for edit palette -->
  <object class="GtkBox" id="edit_palette_container">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>
    <property name="spacing">0</property>
    <property name="halign">center</property>
    <property name="valign">end</property>
    <property name="margin_bottom">12</property>

    <!-- Inner styled container (purple gradient) -->
    <child>
      <object class="GtkBox" id="edit_control">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">3</property>
        <style>
          <class name="edit-palette"/>
        </style>

        <!-- Left Placeholder (future expansion) -->
        <child>
          <object class="GtkBox" id="edit_placeholder_left">
            <property name="visible">True</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
            <property name="opacity">0</property>
          </object>
        </child>

        <!-- Edit Toggle Button [E] (center) -->
        <child>
          <object class="GtkToggleButton" id="edit_toggle_button">
            <property name="visible">True</property>
            <property name="label">E</property>
            <property name="tooltip-text">Toggle Edit Tools (Place, Transition, Arc)</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
            <style>
              <class name="edit-button"/>
            </style>
          </object>
        </child>

        <!-- Right Placeholder (future expansion) -->
        <child>
          <object class="GtkBox" id="edit_placeholder_right">
            <property name="visible">True</property>
            <property name="width-request">28</property>
            <property name="height-request">28</property>
            <property name="opacity">0</property>
          </object>
        </child>

      </object>
    </child>

  </object>

</interface>
