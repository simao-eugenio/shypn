<?xml version="1.0" encoding="UTF-8"?>
<!-- Combined Tools Palette - All edit and operation tools in one row -->
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <!-- Revealer for floating combined palette -->
  <object class="GtkRevealer" id="combined_tools_revealer">
    <property name="visible">True</property>
    <property name="reveal-child">False</property>
    <property name="transition-type">none</property>
    <property name="halign">center</property>
    <property name="valign">end</property>
    <property name="margin_bottom">78</property>

    <child>
      <object class="GtkBox" id="combined_tools_container">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">2</property>
        <style>
          <class name="combined-tools-palette"/>
        </style>

        <!-- ========== EDIT TOOLS SECTION ========== -->
        
        <!-- Select Tool Button [S] -->
        <child>
          <object class="GtkToggleButton" id="select_tool_button">
            <property name="visible">True</property>
            <property name="label">S</property>
            <property name="tooltip-text">Select Tool - Select and manipulate objects</property>
            <property name="width-request">40</property>
            <property name="height-request">40</property>
            <style>
              <class name="tool-button"/>
            </style>
          </object>
        </child>

        <!-- Place Tool Button [P] -->
        <child>
          <object class="GtkToggleButton" id="place_tool_button">
            <property name="visible">True</property>
            <property name="label">P</property>
            <property name="tooltip-text">Place Tool - Create Places</property>
            <property name="width-request">40</property>
            <property name="height-request">40</property>
            <style>
              <class name="tool-button"/>
            </style>
          </object>
        </child>

        <!-- Transition Tool Button [T] -->
        <child>
          <object class="GtkToggleButton" id="transition_tool_button">
            <property name="visible">True</property>
            <property name="label">T</property>
            <property name="tooltip-text">Transition Tool - Create Transitions</property>
            <property name="width-request">40</property>
            <property name="height-request">40</property>
            <style>
              <class name="tool-button"/>
            </style>
          </object>
        </child>

        <!-- Arc Tool Button [A] -->
        <child>
          <object class="GtkToggleButton" id="arc_tool_button">
            <property name="visible">True</property>
            <property name="label">A</property>
            <property name="tooltip-text">Arc Tool - Create Arcs</property>
            <property name="width-request">40</property>
            <property name="height-request">40</property>
            <style>
              <class name="tool-button"/>
            </style>
          </object>
        </child>

        <!-- Visual Separator between Edit Tools and Operations -->
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="margin_start">8</property>
            <property name="margin_end">8</property>
            <property name="width_request">2</property>
          </object>
        </child>

        <!-- ========== EDITING OPERATIONS SECTION ========== -->
        
        <!-- Undo Button -->
        <child>
          <object class="GtkButton" id="btn_undo">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="sensitive">False</property>
            <property name="tooltip_text">Undo (U or Ctrl+Z)</property>
            <property name="label">U</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Redo Button -->
        <child>
          <object class="GtkButton" id="btn_redo">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="sensitive">False</property>
            <property name="tooltip_text">Redo (R or Ctrl+Y)</property>
            <property name="label">R</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Separator -->
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        
        <!-- Lasso Selection Button -->
        <child>
          <object class="GtkButton" id="btn_lasso">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Lasso Selection (L)</property>
            <property name="label">L</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Separator -->
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        
        <!-- Duplicate Button -->
        <child>
          <object class="GtkButton" id="btn_duplicate">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Duplicate Selection (D)</property>
            <property name="label">D</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Align Button -->
        <child>
          <object class="GtkButton" id="btn_align">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Align Selection (A)</property>
            <property name="label">A</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Separator -->
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
          </object>
        </child>
        
        <!-- Cut Button -->
        <child>
          <object class="GtkButton" id="btn_cut">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Cut (X or Ctrl+X)</property>
            <property name="label">X</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Copy Button -->
        <child>
          <object class="GtkButton" id="btn_copy">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Copy (C or Ctrl+C)</property>
            <property name="label">C</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>
        
        <!-- Paste Button -->
        <child>
          <object class="GtkButton" id="btn_paste">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="tooltip_text">Paste (V or Ctrl+V)</property>
            <property name="label">V</property>
            <property name="width-request">36</property>
            <property name="height-request">36</property>
          </object>
        </child>

      </object>
    </child>

  </object>

</interface>
