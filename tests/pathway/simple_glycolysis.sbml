<?xml version="1.0" encoding="UTF-8"?>
<sbml xmlns="http://www.sbml.org/sbml/level3/version2/core" level="3" version="2">
  <model id="simple_pathway" name="Simple Glycolysis Pathway">
    
    <!-- Compartments -->
    <listOfCompartments>
      <compartment id="cytosol" name="Cytosol" size="1.0" constant="true"/>
    </listOfCompartments>
    
    <!-- Species (Metabolites) -->
    <listOfSpecies>
      <species id="glucose" name="Glucose" compartment="cytosol" initialConcentration="5.0" hasOnlySubstanceUnits="false" boundaryCondition="false" constant="false"/>
      <species id="atp" name="ATP" compartment="cytosol" initialConcentration="2.5" hasOnlySubstanceUnits="false" boundaryCondition="false" constant="false"/>
      <species id="g6p" name="Glucose-6-phosphate" compartment="cytosol" initialConcentration="0.0" hasOnlySubstanceUnits="false" boundaryCondition="false" constant="false"/>
      <species id="adp" name="ADP" compartment="cytosol" initialConcentration="0.5" hasOnlySubstanceUnits="false" boundaryCondition="false" constant="false"/>
    </listOfSpecies>
    
    <!-- Parameters -->
    <listOfParameters>
      <parameter id="Vmax_hexokinase" value="10.0" constant="true"/>
      <parameter id="Km_glucose" value="0.1" constant="true"/>
    </listOfParameters>
    
    <!-- Reactions -->
    <listOfReactions>
      <reaction id="hexokinase" name="Hexokinase" reversible="false">
        <listOfReactants>
          <speciesReference species="glucose" stoichiometry="1" constant="true"/>
          <speciesReference species="atp" stoichiometry="1" constant="true"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="g6p" stoichiometry="1" constant="true"/>
          <speciesReference species="adp" stoichiometry="1" constant="true"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <divide/>
              <apply>
                <times/>
                <ci> Vmax_hexokinase </ci>
                <ci> glucose </ci>
              </apply>
              <apply>
                <plus/>
                <ci> Km_glucose </ci>
                <ci> glucose </ci>
              </apply>
            </apply>
          </math>
          <listOfLocalParameters>
            <localParameter id="Vmax" value="10.0"/>
            <localParameter id="Km" value="0.1"/>
          </listOfLocalParameters>
        </kineticLaw>
      </reaction>
    </listOfReactions>
    
  </model>
</sbml>
